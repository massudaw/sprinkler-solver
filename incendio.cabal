name:                incendio
version:             0.1.0.1
-- synopsis:            
-- description:         
-- license:             
license-file:        LICENSE
-- author:              
-- maintainer:          
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:
    Project
    ,Element
    ,Grid
    ,Input
    ,Sprinkler
    ,Tee
    ,Position
    ,Mecha
    ,Diagram
    ,Lint
  build-depends:        base >=4.7 && <4.9
                      , hmatrix
                      , hmatrix-gsl
                      , mtk
                      , text
                      , containers
                      , distributive
                      , ad 
                      , comonad 
                      , reflection 
                      , transformers 
                      , diagrams-core
                      , diagrams-svg
                      , diagrams-lib
                      , mecha 
                      , lens 
                      , void
                      , semigroupoids 
                      , linear 
                      ,process
                      ,async
  -- hs-source-dirs:      
  default-language:    Haskell2010
  hs-source-dirs: src
executable Simple 
  main-is:             Simple.hs
  ghc-options :   -O0 
  build-depends:       base >=4.7 && <4.9
                      ,async
                      ,incendio
                      ,text
  default-language:    Haskell2010
  hs-source-dirs: example


executable SaoJorge 
  main-is:             SaoJorge.hs
  ghc-options :   -O2 -threaded
  build-depends:       base >=4.7 && <4.9
                      ,async
                      ,incendio
                      ,text
  default-language:    Haskell2010
  hs-source-dirs: example

executable Test 
  main-is:             Test.hs
  ghc-options :   -O2 -threaded -caf-all
  build-depends:       base >=4.7 && <4.9
                      ,async
                      ,incendio
                      ,diagrams-svg
                      ,diagrams-core
                      ,diagrams-lib
                      ,mecha
                      ,text
                      ,mtl
                      
  default-language:    Haskell2010
  hs-source-dirs: example

